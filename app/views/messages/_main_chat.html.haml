.chat-main
  .chat-main__main-header
    .chat-main__main-header__left-box
      %h2.chat-main__main-header__left-box__current-group
        group name
      %ul.chat-main__main-header__left-box__member-list
        Menberï¼š
        %li.chat-main__main-header__left-box__member-list__member
          chikara
    =link_to "Edit", "#", class: "chat-main__main-header__edit-btn"

  .chat-main__messages
    .chat-main__messages__message
      .chat-main__messages__message__upper-info
        .chat-main__messages__message__upper-info__talker
          chikara
        .chat-main__messages__message__upper-info__date
          2019/11/18(Mon) 20:00:00
      .chat-main__messages__message__text
        good

  .chat-main__form
    = form_for [@group, @message] do |f|
      .chat-main__form__new_message
        .chat-main__form__new_message__input-box
          = f.text_field :content, class: 'chat-main__form__new_message__input-box__text', placeholder: 'type a message'
          = f.label :image, class: 'chat-main__form__new_message__input-box__image' do
            = icon('fas', 'image', class: 'icon')
            = f.file_field :image, class: 'chat-main__form__new_message__input-box__image__file'
        = f.submit 'Send', class: 'chat-main__form__new_message__submit-btn'
